    position:absolute;
    top:60%;              /* slightly below center */
    left:15%;             /* left side */
    transform:translateY(-50%); /* center vertically relative to top:60% */
    width:var(--overlay-width);
    max-width:40%;
    text-align:left;
    pointer-events:none;   /* let clicks pass through to image (remove if you want clicks) */
    z-index:10;
  }

  /* countdown box - transparent background (no box) */
  .countdown { display:flex; gap:8px; align-items:center; justify-content:flex-start; }

  .unit{ display:flex; flex-direction:column; align-items:center; min-width:48px; }
  .value{
    font-size:28px;
    font-weight:800;
    line-height:1;
    color:#ffffff;               /* white digits */
    text-shadow: 0 2px 6px rgba(0,0,0,0.7); /* makes text readable on photos */
  }
